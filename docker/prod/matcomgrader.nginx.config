server {
    listen 80;
    server_name matcomgrader.com www.matcomgrader.com;
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl http2;
    server_name matcomgrader.com www.matcomgrader.com;

    ssl_certificate /etc/letsencrypt/live/matcomgrader.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/matcomgrader.com/privkey.pem;
    ssl_trusted_certificate /etc/letsencrypt/live/matcomgrader.com/chain.pem;

    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;

    location / {
        proxy_pass http://unix:/var/www/matcomgrader/matcomgrader.sock;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Serve static files (Optional)
    location /static/ {
        alias /var/www/matcomgrader/static/;
    }

    # Security headers
    add_header X-Frame-Options DENY;
    add_header X-Content-Type-Options nosniff;
    add_header X-XSS-Protection "1; mode=block";
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" always;

    access_log /var/log/nginx/matcomgrader_access.log;
    error_log /var/log/nginx/matcomgrader_error.log;
}
